<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".InfoAcitvity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UniversityName"
        android:textStyle="bold"
        android:textSize="22dp"
        android:id="@+id/info_university_title"
        android:autoSizeTextType="uniform"
        android:padding="10dp"
        android:background="@drawable/info_title"
        android:textAlignment="center"
        android:textColor="#2B2A2A"
        android:layout_margin="10dp"

        android:gravity="center_horizontal"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:background="@drawable/info_desc"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/alpha_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="IN"
            android:textAlignment="textEnd"
            android:textColor="#000000"

            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Website : "
                android:textColor="#2B2A2A"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/info_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="www.google.com"
                android:textColor="#4A4AFD"
                android:textSize="18dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Domains : "
                android:textColor="#2B2A2A"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/info_domains"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="www.google.com"
                android:textColor="#4A4AFD"
                android:textSize="18dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="State : "
                android:textColor="#2B2A2A"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/info_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Punjab"
                android:textColor="#2B2A2A"
                android:textSize="18dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Country : "
                android:textColor="#2B2A2A"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/info_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="India"
                android:textColor="#2B2A2A"
                android:textSize="18dp"></TextView>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="100dp"
        android:backgroundTint="#FA6E6E"
        android:id="@+id/close_button"></com.google.android.material.floatingactionbutton.FloatingActionButton>
</LinearLayout>